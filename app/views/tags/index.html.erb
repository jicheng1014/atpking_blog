<div class="py-10">
  <header>
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">标签列表</h1>
    </div>
  </header>
  <main>
    <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div class="px-4 py-8 sm:px-0">
        <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
          <% @tags.each do |tag| %>
            <%= link_to tag_path(tag), class: "group" do %>
              <div class="p-4 transition-all duration-200 bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md hover:border-blue-500">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600"><%= tag.name %></h3>
                <p class="mt-1 text-sm text-gray-500">
                  <%= pluralize(tag.posts_count, '篇文章') %>
                </p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
